<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.minyisoft.webapp.yjmz.oa.persistence.MaintainReqBillDao">
  <!-- ResultMap基础定义，可根据实际情况进行修改或扩展 -->
  <resultMap id="MaintainReqBillResult" type="MaintainReqBillInfo">
      <id property="id" column="fid" />
      <result property="applyDepartment" column="fapplydepartmentid" typeHandler="bizModelHandler" />
      <result property="applyUser" column="fapplyuserid" typeHandler="bizModelHandler" />
      <result property="location" column="flocation" />
      <result property="maintainTypes" column="fmaintaintypesid" typeHandler="describableEnumArrayHandler"/>
      <result property="maintenanceMan" column="fmaintenancemanid" typeHandler="bizModelHandler" />
      <result property="finishDate" column="ffinishdate" />
      <result property="receiver" column="freceiverid" typeHandler="bizModelHandler" />
      <result property="examiner" column="fexaminerid" typeHandler="bizModelHandler" />
      <result property="billNumber" column="fbillnumber" />
      <result property="description" column="fdescription" />
      <result property="sourceBill" column="fsourcebillid" typeHandler="bizModelHandler" />
      <result property="createUser" column="fcreateuserid" typeHandler="bizModelHandler" />
      <result property="createDate" column="fcreatedate" />
      <result property="lastUpdateUser" column="flastupdateuserid" typeHandler="bizModelHandler" />
      <result property="lastUpdateDate" column="flastupdatedate" />
      <result property="version" column="fversion" />
      <collection property="entry" column="fid" javaType="ArrayList" ofType="MaintainReqEntryInfo">
		<constructor>
		   <idArg column="fmaintainreqentryid" typeHandler="bizModelHandler"/>
		</constructor>
	  </collection>
    </resultMap>

  <!-- 重要：下面增、删、改、查等操作定义，均会被基类方法调用，主要不要修改其id值 -->

  <!-- 根据ID查询记录 -->
  <select id="getEntity" parameterType="String" resultMap="MaintainReqBillResult">
    select
            	m.fapplydepartmentid ,
            	m.fapplyuserid ,
            	m.flocation ,
            	m.fmaintaintypesid ,
            	m.fmaintenancemanid ,
            	m.ffinishdate ,
            	m.freceiverid ,
            	m.fexaminerid ,
            	m.fbillnumber ,
            	m.fdescription ,
            	m.fsourcebillid ,
            	m.fcreateuserid ,
            	m.fcreatedate ,
            	m.flastupdateuserid ,
            	m.flastupdatedate ,
            	m.fid ,
            	m.fversion ,
            	e.fid as fmaintainreqentryid
          from t_oa_maintainreqbill m left join t_oa_maintainreqentry e on m.fid = e.freqbillid
    where m.fid = #{id}
  </select>
  
  <!-- 查询条件SQL -->
  <sql id="getCriteriaCondition">
  	<where>
		<if test="ids!=null">
            fid in <foreach collection="ids" item="item" open="(" close=")" separator=",">#{item}</foreach>
        </if>
		<if test="excludeIds!=null">
            and fid not in <foreach collection="excludeIds" item="item" open="(" close=")" separator=",">#{item}</foreach>
        </if>
	</where>
  </sql>
  
  <!-- 获取满足指定过滤条件的记录数 -->
  <select id="countEntity" parameterType="MaintainReqBillCriteria" resultType="int">
    select count(*) from t_oa_maintainreqbill
    <include refid="getCriteriaCondition"/>
  </select>
  
  <!-- 获取满足指定过滤条件的记录 -->
  <select id="getEntityCollection" parameterType="MaintainReqBillCriteria" resultMap="MaintainReqBillResult">
    select
            	m.fapplydepartmentid ,
            	m.fapplyuserid ,
            	m.flocation ,
            	m.fmaintaintypesid ,
            	m.fmaintenancemanid ,
            	m.ffinishdate ,
            	m.freceiverid ,
            	m.fexaminerid ,
            	m.fbillnumber ,
            	m.fdescription ,
            	m.fsourcebillid ,
            	m.fcreateuserid ,
            	m.fcreatedate ,
            	m.flastupdateuserid ,
            	m.flastupdatedate ,
            	m.fid ,
            	m.fversion ,
            	e.fid as fmaintainreqentryid
    from 
    (select * from t_oa_maintainreqbill
    <include refid="getCriteriaCondition"/>
	<if test="pageDevice!=null">
	limit #{pageDevice.startRowNumberOfCurrentPage - 1},#{pageDevice.recordsPerPage}
	</if>
	) m left join t_oa_maintainreqentry e on m.fid = e.freqbillid
  </select>
  
  <!-- 通用记录插入操作 --> 
  <insert id="insertEntity" parameterType="MaintainReqBillInfo">
    insert into t_oa_maintainreqbill (fapplydepartmentid,fapplyuserid,flocation,fmaintaintypesid,fmaintenancemanid,ffinishdate,freceiverid,fexaminerid,fbillnumber,fdescription,fsourcebillid,fcreateuserid,fcreatedate,flastupdateuserid,flastupdatedate,fid) 
    values(#{applyDepartment.id},#{applyUser.id},#{location},#{maintainTypes.id},#{maintenanceMan.id},#{finishDate},#{receiver.id},#{examiner.id},#{billNumber},#{description},#{sourceBill.id},#{createUser.id},#{createDate},#{lastUpdateUser.id},#{lastUpdateDate},#{id})
  </insert>

  <!-- 通用记录更新操作 --> 
  <update id="updateEntity" parameterType="MaintainReqBillInfo">
    update t_oa_maintainreqbill set fapplydepartmentid=#{applyDepartment.id},fapplyuserid=#{applyUser.id},flocation=#{location},fmaintaintypesid=#{maintainTypes.id},fmaintenancemanid=#{maintenanceMan.id},ffinishdate=#{finishDate},freceiverid=#{receiver.id},fexaminerid=#{examiner.id},
    fbillnumber=#{billNumber},fdescription=#{description},fsourcebillid=#{sourceBill.id},fcreateuserid=#{createUser.id},fcreatedate=#{createDate},flastupdateuserid=#{lastUpdateUser.id},flastupdatedate=#{lastUpdateDate},fversion=fversion+1 where fid=#{id} and fversion=#{version}
  </update>

  <!-- 通用记录删除操作 -->
  <delete id="batchDelete" parameterType="list">
    delete from t_oa_maintainreqbill where fid in <foreach collection="list" item="item" open="(" close=")" separator=",">#{item}</foreach>
  </delete>
</mapper>